<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PracticaObligatorioUniversos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_gold</item>
        <item name="colorPrimaryVariant">@color/light_gold</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_gold</item>
        <item name="colorSecondaryVariant">@color/medium_gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:colorControlNormal">@color/light_gold</item>
        <item name="android:itemTextAppearance">@style/ChangeTextColor</item>
s
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PracticaObligatorioUniversos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/font_file</item>
    </style>

    <style name="NavigationDrawerTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_file</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_gold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChangeTextColor">
        <item name="android:textColor">@color/light_gold</item>
        <item name="fontFamily">@font/font_file</item>
    </style>

    <style name="Theme.PracticaObligatorioUniversos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PracticaObligatorioUniversos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... otros atributos ... -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>